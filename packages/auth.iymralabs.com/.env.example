# Server
PORT=5000
NODE_ENV=development

# OAuth/OIDC
OIDC_ISSUER=https://auth.iymralabs.com
OIDC_COOKIE_KEYS=change-these,random-values
OIDC_JWKS_PATH=./secrets/jwks.json
OIDC_ACCESS_TTL=900
OIDC_REFRESH_TTL=604800

# Appwrite
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_api_key
APPWRITE_DATABASE_ID=your_database_id

# Collections
APPWRITE_USERS_COLLECTION_ID=users
APPWRITE_OAUTH_CLIENTS_COLLECTION_ID=oauth_clients
APPWRITE_OAUTH_TOKENS_COLLECTION_ID=oauth_tokens
APPWRITE_OAUTH_INTERACTIONS_COLLECTION_ID=oauth_interactions

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000  # 5 minutes
RATE_LIMIT_MAX_REQUESTS=60   # 60 requests per window